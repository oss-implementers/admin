<main class="app-content">
	<div class="app-title">
		<div>
			<h3><i class="fa fa-edit"></i> Add Product</h3>
		</div>
		<ul class="app-breadcrumb breadcrumb">
			<li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
			<li class="breadcrumb-item">Forms</li>
			<li class="breadcrumb-item"><a href="#">Sample Forms</a></li>
		</ul>
	</div>
	<div class="row">
		<div class="col-md-8">
			<div class="tile">

				<%= form_for @product, url: vendor_product_index_path, method: :post, html: {class: "", multipart: true} do |f| %>

				<% flash.each do |key, value| %>
					<div class="alert alert-<%= key %>"><%= value %></div>
				<% end %>

				<div class="tile-body">
					<div class="form-group">
						<%= f.label :category, class: "control-label" %>
						<%= f.select(:category_id, options_for_select(category_options_array), {}, { :class => 'form-control' }) %>
						<p class='error'><%= show_errors(@product, :category_id) %></p>
					</div>

					<div class="form-group">
						<%= f.label :name, class: "control-label" %>
						<%= f.text_field :name, class: "form-control", placeholder: "Name", autocomplete: "off" %>
						<p class='error'><%= show_errors(@product, :name) %></p>
					</div>

					<div class="form-group">
						<%= f.label :price, class: "control-label" %>
						<%= f.text_field :price, class: "form-control", placeholder: "Price", autocomplete: "off" %>
						<p class='error'><%= show_errors(@product, :price) %></p>
					</div>

					<div class="form-group">
						<%= f.label :image, class: "control-label" %>
						<%= f.file_field :image, class: "form-control", placeholder: "Image", autocomplete: "off", accept:'image/*' %>
						<p class='error'><%= show_errors(@product, :image) %></p>
					</div>

					<div class="form-group">
						<%= f.label :link, class: "control-label" %>
						<%= f.text_field :link, class: "form-control", placeholder: "Link", autocomplete: "off" %>
						<p class='error'><%= show_errors(@product, :link) %></p>
					</div>

					<div class="form-group">
						<%= f.label :status, class: "control-label" %>
						<%= f.select(:status, [['Active', 1], ['Inactive', 0]], {}, { :class => 'form-control' }) %>
						<p class='error'><%= show_errors(@product, :status) %></p>
					</div>

				</div>

				<div class="tile-footer">
					<button class="btn btn-primary" type="submit"><i class="fa fa-fw fa-lg fa-check-circle"></i>Submit</button>
				</div>

				<% end %>

			</div>
		</div>
	
	</div>
</main>