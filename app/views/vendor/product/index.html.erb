<main class="app-content">
      <div class="app-title">
        <div>
          <h1><i class="fa fa-th-list"></i> Products</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="tile">
            <div class="tile-body">
              <table class="table table-hover table-bordered" id="sampleTable">
                <thead>
                  <tr>
                    <th style="width:1%">S.No</th>
                    <th style="width:7%">Category</th>
                    <th style="width:10%">Name</th>
                    <th style="width:5%">Price</th>
                    <th style="width:8%">Image</th>
                    <th style="width:10%">Link</th>
                    <th style="width:2%">Status</th>
                    <th style="width:6%">Action</th>
                  </tr>
                </thead>
                <tbody>
                    <% 
                       @count = 0
                       @products.each do |product| 
                    %>
                      <tr>
                        <td><%= @count += 1 %></td>
                        <td><%= get_product_cateory(product.category_id) %></td>
                        <td><%= product.name %></td>
                        <td><%= product.price %></td>
                        <td><%= image_tag product.image.url, width: "100" %></td>
                        <td><%= product.link %></td>
                        <td><%= product.status == 1 ? "Active" : "Inactive" %></td>
                        <td><%= link_to 'Edit', edit_vendor_product_path(product) %> | <%= link_to 'Delete', vendor_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </tr>
                    <% end %>
                  </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </main>