<main class="app-content">
      <div class="app-title">
        <div>
          <h1><i class="fa fa-th-list"></i> <%= @vendordata[1] %>'s Products</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="tile">
            <div class="tile-body">
              <table class="table table-hover table-bordered" id="sampleTable">
                <thead>
                  <tr>
                    <th>S.No</th>
                    <th>Category</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Image</th>
                    <th>Link</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody>
                    <% 
                      @count = 0
                      @products.each do |product| 
                    %>
                      <tr>
                        <td><%= @count += 1 %></td>
                        <td><%= get_product_cateory(product.category_id) %></td>
                        <td><%= product.name %></td>
                        <td><%= product.price %></td>
                        <td><%= image_tag product.image.url, width: "100" %></td>
                         <td><%= product.link %></td>
                        <td><%= product.status == 1 ? "Active" : "Inactive" %></td>
                       
                      </tr>
                    <% end %>
                  </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </main>