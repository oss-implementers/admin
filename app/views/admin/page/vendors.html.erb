<main class="app-content">
      <div class="app-title">
        <div>
          <h1><i class="fa fa-th-list"></i> Vendors</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="tile">
            <div class="tile-body">
              <table class="table table-hover table-bordered" id="sampleTable">
                <thead>
                  <tr>
                    <th>S.No</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Business name</th>
                    <th>Created at</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                    <% 
                      @count = 0
                      @vendors.each do |vendor| 
                    %>
                      <tr>
                        <td><%= @count += 1 %></td>
                        <td><%= vendor.name %></td>
                        <td><%= vendor.email %></td>
                        <td><%= vendor.business_name %></td>
                        <td><%= vendor.created_at %></td>
                        <td><%= link_to "View Products", admin_vendor_products_path(vendor), :class => "treeview-item" %></td>
                      </tr>
                    <% end %>
                  </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </main>