      </div>
   </div>
   <ul class="app-menu">
      <li><%= link_to "<i class='app-menu__icon fa fa-dashboard'></i><span class='app-menu__label'>Dashboard</span>".html_safe, "#{admin_home_path}", class: "app-menu__item #{active_class}" %>
